<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Heading" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cabecario" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bulssola"
        android:contentDescription="@string/bulssola"
        android:src="@drawable/compass_card_transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azimuth:"
        android:id="@+id/txt_azimuth"
        android:layout_below="@+id/cabecario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getDeclination:"
        android:id="@+id/txtGetDeclination"
        android:layout_below="@+id/txt_azimuth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Azimuth:"
        android:id="@+id/txtNovoAzimuth"
        android:layout_below="@+id/txtGetDeclination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BearingTo:"
        android:id="@+id/txtBearingTo"
        android:layout_below="@+id/txtNovoAzimuth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction:"
        android:id="@+id/txtDirection"
        android:layout_below="@+id/txtBearingTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha direcao"
        android:id="@+id/txtBearing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtDirection" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posicao inicial:"
        android:id="@+id/txtPosicaoInicial"
        android:layout_marginBottom="72dp"
        android:layout_alignBottom="@+id/bulssola"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posicao final:"
        android:id="@+id/txtPosicaoFianl"
        android:layout_alignTop="@+id/txtPosicaoInicial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distancia:"
        android:id="@+id/txtDistancia"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_above="@+id/txtPosicaoInicial"
        android:layout_alignRight="@+id/bulssola"
        android:layout_alignEnd="@+id/bulssola" />
</RelativeLayout>
